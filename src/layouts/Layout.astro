---
import '../styles/global.css';
import Header from '../components/Header.astro';

export interface Props {
	title: string;
}

const { title = 'Newton AI' } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,600;1,700;1,800&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
    <div class="justify-between w-screen flex absolute -z-50">
        <div class="h-72 w-1/4 bg-gradient-to-b from-pink-200 mix-blend-multiply rounded-r-3xl blur-3xl "></div>
        <div class="h-32 w-full bg-gradient-to-b from-blue-300 mix-blend-multiply rounded-full blur-3xl "></div>
        <div class="h-32 w-1/4 bg-gradient-to-b from-pink-300 mix-blend-multiply rounded-l-2xl blur-3xl "></div>
    </div>
	<body>
        <div class="max-w-screen-xl mx-auto">
            <Header />
  		    <slot />
        </div>
	</body>
</html>

